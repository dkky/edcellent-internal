<div id="clearance" class="sign-up">
  <h2><%= t("Register now") %></h2>

  <%= bootstrap_form_for @user do |form| %>

    <div class="text-field">
      <%= form.text_field :english_name %>
    </div>

    <div class="text-field">
      <%= form.text_field :first_name %>
    </div>

    <div class="text-field">
      <%= form.text_field :last_name %>
    </div>

    <div class="text-field">
      <%= form.text_field :email, type: 'email' %>
    </div>
  
    <div class="text-field">
      <%= form.text_field :school %>
    </div>
    
    <div class="text-field">
      <%= form.text_field :phone_number %>
    </div>    

    <div class="text-field">
      <%= form.select :year_level, User.options_for_year_level %>
    </div>

    <div class="text-field">
      <%= form.hidden_field :access, value: 'student' %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>
