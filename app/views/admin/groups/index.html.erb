
<h1>Groups</h1>

<p><%= link_to 'Create a New Group', new_admin_group_path %></p>


<div class="well">
  <%= form_for_filterrific @filterrific do |f| %>
    <div class="row">


      <div class="col-md-2">
        <div class="form-group chardin_box" data-position='top'>               
          <label> Tutor </label>
          <%= f.select :with_different_tutor,
                     @filterrific.select_options[:with_different_tutor],
                     { include_blank: '- Any -' }, 
                     { class: 'form-control' }     
          %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group chardin_box" data-position='top'>               
          <label> Group Name</label>
          <%= f.select :with_different_name,
                     @filterrific.select_options[:with_different_name],
                     { include_blank: '- Any -' }, 
                     { class: 'form-control' }     
          %>
        </div>
      </div>

    
  <% end %>
</div>
<br>

<div id="results">
  <%= render partial: 'admin/groups/list', locals: { :groups => @groups } %>
</div>

<script type="text/javascript">
  $('.js-datepicker').datepicker();
</script>